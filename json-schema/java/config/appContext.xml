<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<!-- ** Properties ** -->

  <bean id="propertyConfigurer"
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
    <property name="locations" >
      <list>
        <value>classpath:appContext.properties</value>
      </list>
    </property>
  </bean>

<!-- ** Frijoles ** -->

  <alias alias="validator" name="${cfg.jsonValidator}" />
  <bean id="vahlasJsonValidator" class="com.andre.jsonschema.VahlasJsonValidator" />
  <bean id="equalExpertsJsonValidator" class="com.andre.jsonschema.EqualExpertsJsonValidator" />

  <bean id="testConfig" class="com.andre.jsonschema.TestConfig">
     <property name="baseDir" value="${cfg.baseDir}" />
     <property name="schemaFile" value="${cfg.schema}" />
     <property name="schemaFileRef" value="${cfg.schemaRef}" />
  </bean>

</beans>
