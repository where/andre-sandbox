<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="keyValueDao" class="com.amm.nosql.dao.citrusleaf.CitrusleafKeyValueDao" >
    <constructor-arg ref="citrusleafClient" />
    <constructor-arg value="${citrusleaf.namespace}" />
    <constructor-arg value="${citrusleaf.bin}" />
    <constructor-arg value="${citrusleaf.set}" />
    <constructor-arg ref="keyValueMapper" />
  </bean>

  <bean id="citrusleafClient" class="net.citrusleaf.CitrusleafClient" >
    <constructor-arg value="${citrusleaf.host}" />
    <constructor-arg value="${citrusleaf.port}" />
  </bean>

</beans>
