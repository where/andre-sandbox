<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="restClient" class="com.paypal.ppmn.rps.client.RestProfileClient" >
     <constructor-arg ref="restHttpClient" />
     <constructor-arg value="${serviceUrl}" />
     <constructor-arg ref="objectMapper" />
  </bean>

  <bean id="serviceClient" class="com.paypal.ppmn.rps.client.ServiceProfileClient" lazy-init="true" >
     <constructor-arg ref="profileService" />
  </bean>

  <bean id="restHttpClient" class="com.andre.http.RestHttpClient" lazy-init="true" >
  </bean>

  <import resource="classpath:appContext-core.xml" />

</beans>
