<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jaxrs="http://cxf.apache.org/jaxrs"
  xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd">

  <!-- do not use import statements if CXFServlet init parameters link to this beans.xml --> 
  <import resource="classpath:META-INF/cxf/cxf.xml" />
  <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

  <jaxrs:server id="apiService" address="/">

    <jaxrs:inInterceptors>
       <ref bean="logInbound"/>
     </jaxrs:inInterceptors>

    <jaxrs:providers>
<!--
      <ref bean="exceptionMapper.WebApplication"/>
      <ref bean="javaSerializedReaderWriter"/>
-->

      <!-- JAXB Provider customization -->
<!--
      <ref bean="jaxbProvider"/>
-->

      <!-- Jackson instead of default Jettison  -->
      <bean class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider"/>

    </jaxrs:providers>

    <jaxrs:serviceBeans>
      <ref bean="profileResource" />
      <ref bean="pingResource" />
    </jaxrs:serviceBeans>

  </jaxrs:server>

  <bean id="profileResource" class="com.paypal.ppmn.rps.jaxrs.ProfileResource" >
     <constructor-arg ref="profileService" />
  </bean >
  <bean id="pingResource" class="com.paypal.ppmn.rps.jaxrs.PingResource" />

<!--
  <bean id="exceptionMapper.WebApplication" class="com.andre.jaxrs.exceptions.WebApplicationExceptionMapper" />
  <bean id="javaSerializedReaderWriter" class="com.andre.jaxrs.JavaSerializedReaderWriter" />
-->

  <bean id="logInbound" class="org.apache.cxf.interceptor.LoggingInInterceptor"/>
  <bean id="logOutbound" class="org.apache.cxf.interceptor.LoggingOutInterceptor"/>
</beans>
